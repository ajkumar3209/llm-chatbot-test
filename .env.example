# OpenRouter API Key (used for LLM via openrouter.ai)
OPENROUTER_API_KEY=your-openrouter-api-key-here

# Zoho Desk Configuration
ZOHO_ACCESS_TOKEN=your-zoho-access-token-here
ZOHO_ORG_ID=your-zoho-org-id-here
ZOHO_DEPT_ID=your-zoho-dept-id-here

# Zoho SalesIQ Configuration (Indian Domain - api_domain: https://www.zohoapis.in)
SALESIQ_ACCESS_TOKEN=your-salesiq-access-token-here
SALESIQ_DEPARTMENT_ID=your-salesiq-department-id-here
SALESIQ_APP_ID=your-salesiq-app-id-here
SALESIQ_SCREEN_NAME=rtdsportal

# SalesIQ OAuth Credentials (for token refresh)
SALESIQ_CLIENT_ID=your-salesiq-client-id-here
SALESIQ_CLIENT_SECRET=your-salesiq-client-secret-here
SALESIQ_REFRESH_TOKEN=your-salesiq-refresh-token-here

# Webhook Authentication Secret (set a strong random string)
WEBHOOK_SECRET=your-webhook-secret-here

# Port (Railway sets this automatically)
PORT=8000
