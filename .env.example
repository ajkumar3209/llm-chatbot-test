# OpenRouter API Key (used for LLM via openrouter.ai)
OPENROUTER_API_KEY=your-openrouter-api-key-here
GEMINI_MODEL=gemini-2.5-flash

# ── SalesIQ Chat Closure (Standard Token) ──
SALESIQ_ACCESS_TOKEN=your-salesiq-standard-access-token
SALESIQ_REFRESH_TOKEN=your-salesiq-standard-refresh-token
SALESIQ_CLIENT_ID=your-salesiq-standard-client-id
SALESIQ_CLIENT_SECRET=your-salesiq-standard-client-secret

# ── SalesIQ Chat Transfer (Org / Visitor Token) ──
SALESIQ_VISITOR_ACCESS_TOKEN=your-salesiq-visitor-access-token
SALESIQ_VISITOR_REFRESH_TOKEN=your-salesiq-visitor-refresh-token
SALESIQ_VISITOR_CLIENT_ID=your-salesiq-visitor-client-id
SALESIQ_VISITOR_CLIENT_SECRET=your-salesiq-visitor-client-secret

# ── SalesIQ Static IDs ──
SALESIQ_APP_ID=your-salesiq-app-id
SALESIQ_DEPARTMENT_ID=your-salesiq-department-id
SALESIQ_SCREEN_NAME=rtdsportal

# ── Desk Callback (Standard Token) ──
DESK_ACCESS_TOKEN=your-desk-access-token
DESK_REFRESH_TOKEN=your-desk-refresh-token
DESK_CLIENT_ID=your-desk-client-id
DESK_CLIENT_SECRET=your-desk-client-secret

# ── Desk Static IDs ──
DESK_ORG_ID=your-desk-org-id
DESK_DEPARTMENT_ID=your-desk-department-id

# ── OAuth Base URL (Indian domain) ──
ZOHO_ACCOUNTS_URL=https://accounts.zoho.in

# ── Webhook Authentication ──
WEBHOOK_SECRET=your-webhook-secret-here

# ── Port (Railway sets this automatically) ──
PORT=8000
